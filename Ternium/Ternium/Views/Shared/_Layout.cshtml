<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ternium</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css ">
</head>
<body>
    @{
        var w = new Byte[20];
        if (Context.Session.TryGetValue("user", out w))
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-white border-bottom box-shadow mb-3 navTernium">
                    <div class="container">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ternium</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-light navTernium navbar-right" asp-area="" asp-controller="Logout" asp-action="Index">Cerrar sesión</a>
                                </li>
                            </ul>

                            <ul class="navbar-nav mr-auto flex-grow-1">
                                @{
                                    var x = new Byte[20];
                                    if (Context.Session.TryGetValue("user", out x))
                                    {
                                        string user = System.Text.Encoding.UTF8.GetString(w);
                                        <li class="nav-item">
                                            <a class="nav-link text-light navTernium navbar-right" asp-area="" asp-controller="Home" asp-action="Index">@user</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-light navTernium" asp-area="" asp-controller="Jugar" asp-action="Index">Jugar</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-light navTernium" asp-area="" asp-controller="Leaderboard" asp-action="Index">Leaderboard</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-light navTernium" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                                        </li>
                                    }
                                }
                            </ul>

                        </div>
                    </div>
                </nav>
            </header>
            }
         }
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        @{
            var y = new Byte[20];
            if (Context.Session.TryGetValue("user", out y))
            {
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2021 - Ternium - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            }
        }
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
